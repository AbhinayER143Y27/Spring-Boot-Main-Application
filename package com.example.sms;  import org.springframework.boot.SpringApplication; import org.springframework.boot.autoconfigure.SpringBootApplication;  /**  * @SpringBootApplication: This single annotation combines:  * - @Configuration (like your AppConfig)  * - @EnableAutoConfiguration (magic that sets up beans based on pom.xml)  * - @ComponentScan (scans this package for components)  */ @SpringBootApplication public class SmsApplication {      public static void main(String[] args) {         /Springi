package com.example.sms;

import org.springframework.boot.SpringApplication;
import org.springframework.boot.autoconfigure.SpringBootApplication;

/**
 * @SpringBootApplication: This single annotation combines:
 * - @Configuration (like your AppConfig)
 * - @EnableAutoConfiguration (magic that sets up beans based on pom.xml)
 * - @ComponentScan (scans this package for components)
 */
@SpringBootApplication
public class SmsApplication {

    public static void main(String[] args) {
        // This is the only main method. It starts the entire web server.
        SpringApplication.run(SmsApplication.class, args);
    }

}
