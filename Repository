package com.example.sms.repository;

import com.example.sms.entity.Student;
import org.springframework.data.jpa.repository.JpaRepository;
import org.springframework.stereotype.Repository;

/**
 * This is the magic of Spring Data JPA.
 * You just define an interface, and Spring Boot creates the
 * implementation FOR YOU.
 *
 * You get save(), findById(), findAll(), deleteById(), etc. for free.
 * No more manual DAO implementation.
 */
@Repository
public interface StudentRepository extends JpaRepository<Student, Long> {
    // You can add custom queries here if needed, e.g.:
    // List<Student> findByDepartment(String department);
}
